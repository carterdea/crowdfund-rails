%header.navbar.navbar-default
  .container-fluid
    .navbar-header
      %button(type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar-collapse" aria-expanded="false" aria-controls="navbar-collapse")
        %span.sr-only Toggle Navigation
        %span.icon-bar
        %span.icon-bar
        %span.icon-bar
      = link_to image_tag("logo.png", alt: "AdoptTogether"), root_url, class: "logo navbar-brand"
    %nav.collapse.navbar-collapse.clearfix#navbar-collapse
      %ul.nav.navbar-nav.navbar-right
        %li=link_to "Start a Family Profile", new_family_path
        %li=link_to "Start a Fundraiser", "#"
        %li=link_to "What is AdoptTogether?", "#"
        -if logged_in?
          %li=link_to (current_user.has_family? ? current_user.families.last.full_name : current_user.email), edit_user_path(current_user)
          %li=link_to "Log out", logout_path
        -else
          %li=link_to "Login", login_path
        %li
          %p.navbar-btn
            =link_to "Donate", "#", class: "btn btn-primary btn-block"
          / = form_tag "http://google.com", method: "get", class: "btn-donate navbar-form navbar-right" do
          /   .form-group
          /     = button_tag "Donate", class: "btn btn-primary navbar-btn"