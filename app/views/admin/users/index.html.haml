%h1
  %span.show.small
    = link_to 'Admin', admin_path
    \ /
  All #{pluralize(@users.size, 'User')}
%table.table.table-hover
  %thead
    %tr
      %td ID
      %td Email
      %td Family
      %td Date Created
      %td Last Logged In
      %td Admin?
  %tbody
    - @users.each do |user|
      %tr
        %td= user.id
        %td
          %strong
            = user.email
        %td
          - if user.family.present?
            %strong.show= link_to user.family.full_name, user.family
        %td{title: user.created_at.strftime("on %-m/%-d/%Y at %l:%M %p")} #{time_ago_in_words(user.created_at)} ago
        - if user.last_login_at.nil?
          %td
            %span.help-block No login yet 😞
        - else
          %td{title: user.last_login_at.strftime("on %-m/%-d/%Y at %l:%M %p")} #{time_ago_in_words(user.last_login_at)} ago
        %td= user.admin?
  = paginate(@users)
