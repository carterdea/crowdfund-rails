%h1
  %span.show.small
    = link_to 'Admin', admin_path
    \ /
  All #{pluralize(@donations.total_count, 'Donation')}
  - if @family.present?
    for #{link_to @family.full_name, family_path(@family)}
= paginate(@donations)
%table.table.table-hover
  %thead
    %tr
      %td Donor Name
      %td Email
      %td Recipient
      %td Amount
      %td AT Tip
      %td Monthly?
      %td Stripe Link
      %td Actions
  %tbody
    - @donations.each do |donation|
      %tr
        %td
          %strong
            = donation.name
          - if donation.anonymous?
            %span.small (Anonymous)
        %td= donation.email
        %td= link_to donation.recipient.full_name, donation.recipient
        %td
          = pretty_dollars(donation.amount)
          - if donation.hide_amount?
            %span.small (hidden)
        %td= pretty_dollars(donation.at_tip)
        %td= donation.recurring?
        %td= stripe_url(donation, 'üí≥', 'Stripe Profile')
        %td= link_to 'üìù', edit_admin_donation_path(donation), title: 'Edit Donation'
= paginate(@donations)
